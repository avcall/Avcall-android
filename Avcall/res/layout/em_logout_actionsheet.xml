<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:background="@drawable/em_btn_style_alert_dialog_background"
        android:paddingTop="20.0dip"
        android:clickable="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <TextView
            android:textSize="16.0sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@id/tv_text"
            android:padding="5.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:text="@string/logout_hint" />
        <Button
            android:textSize="19.0sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:id="@id/btn_exit"
            android:background="@drawable/em_btn_style_alert_dialog_special"
            android:padding="6.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="6.0dip"
            android:text="@string/logout"
            android:onClick="logout" />
        <Button
            android:textSize="19.0sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:background="@drawable/em_btn_gray_selector"
            android:padding="6.0dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip"
            android:layout_marginTop="18.0dip"
            android:layout_marginRight="6.0dip"
            android:layout_marginBottom="4.0dip"
            android:text="@string/cancel"
            android:onClick="cancel" />
    </LinearLayout>
</LinearLayout>