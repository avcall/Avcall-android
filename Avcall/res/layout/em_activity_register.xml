<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/login_reg_bg"
    android:fitsSystemWindows="true"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.7">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher"
            android:layout_centerInParent="true" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="8.0dip"
        android:layout_weight="1.5">
        <RelativeLayout
            android:background="#ffffffff"
            android:layout_width="fill_parent"
            android:layout_height="54.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginRight="20.0dip">
            <ImageView
                android:id="@id/iv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:src="@drawable/icon_account"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
            <EditText
                android:textSize="18.0sp"
                android:id="@id/username"
                android:background="@null"
                android:paddingLeft="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="@string/user_name"
                android:singleLine="true"
                android:layout_toLeftOf="@id/iv_username"
                android:layout_centerVertical="true" />
        </RelativeLayout>
        <RelativeLayout
            android:background="#ffffffff"
            android:layout_width="fill_parent"
            android:layout_height="54.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="20.0dip">
            <ImageView
                android:id="@id/iv_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:src="@drawable/icon_lock"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
            <EditText
                android:textSize="18.0sp"
                android:id="@id/password"
                android:background="@null"
                android:paddingLeft="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="@string/password"
                android:singleLine="true"
                android:layout_toLeftOf="@id/iv_password"
                android:layout_centerVertical="true"
                android:inputType="textPassword" />
        </RelativeLayout>
        <RelativeLayout
            android:background="#ffffffff"
            android:layout_width="fill_parent"
            android:layout_height="54.0dip"
            android:layout_marginLeft="20.0dip"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="20.0dip">
            <ImageView
                android:id="@id/iv_password2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10.0dip"
                android:src="@drawable/icon_lock"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />
            <EditText
                android:textSize="18.0sp"
                android:id="@id/confirm_password"
                android:background="@null"
                android:paddingLeft="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:hint="@string/confirmpassword"
                android:singleLine="true"
                android:layout_toLeftOf="@id/iv_password2"
                android:layout_centerVertical="true"
                android:inputType="textPassword" />
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8.0dip"
            android:layout_marginTop="20.0dip"
            android:layout_marginRight="8.0dip">
            <Button
                android:textSize="20.0sp"
                android:textColor="@android:color/white"
                android:background="@drawable/em_button_login_bg"
                android:paddingTop="7.0dip"
                android:paddingBottom="7.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8.0dip"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="8.0dip"
                android:text="@string/register"
                android:onClick="register" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>